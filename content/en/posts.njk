title: Blog
layout: page.njk
---
<h1 class="page-title">Latest Posts</h1>
<div class="cards mt-4">
  {% for post in collections.posts | reverse %}
    <article class="card">
      <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      {% if post.date %}
      <p class="meta"><time>{{ post.date }}</time></p>
      {% endif %}
      <p>{{ post.data.description or (post.templateContent | excerpt(30)) }}</p>
      <a class="more" href="{{ post.url }}">Read more â†’</a>
    </article>
  {% endfor %}
</div>
