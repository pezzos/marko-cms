{% set slug = page.fileSlug %}
<section id="comments">
  <h2>Comments</h2>
  <form method="POST" action="{{ env.STATICMAN_ENDPOINT }}">
    <label for="comment-name">Name</label>
    <input type="text" id="comment-name" name="fields[name]" required>

    <label for="comment-email">Email</label>
    <input type="email" id="comment-email" name="fields[email]" required>

    <label for="comment-message">Message</label>
    <textarea id="comment-message" name="fields[message]" required></textarea>

    <input type="hidden" name="options[slug]" value="{{ slug }}">
    <input type="text" name="fields[honeypot]" style="display:none">

    <button type="submit">Submit</button>
  </form>

  {% if comments and comments[slug] %}
    <h3>Previous comments</h3>
    <ul>
    {% for id, comment in comments[slug] | dictsort %}
      <li>
        <p><strong>{{ comment.name }}</strong></p>
        <p>{{ comment.message }}</p>
      </li>
    {% endfor %}
    </ul>
  {% endif %}
</section>
